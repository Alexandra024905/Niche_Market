@model IEnumerable<OrderViewModel>


@{
    ViewData["Title"] = "RetailerOrders";
}

<h1>Orders</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ClientName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Adress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalPrice)
            </th>
            <th> Details </th>
            <th>Complete</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {

        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ClientName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Adress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalPrice)
            </td>
            <td>
                <a class="btn btn-primary" asp-controller="Client" asp-action="OrderDetails" asp-route-orderId="@item.Id">Details</a>
            </td>
            <td>
                <a class="btn btn-primary" asp-controller="Retailer" asp-action="CompleteOrder" asp-route-orderId="@item.Id">Complete</a>
            </td>

            <td>
                <a class="btn btn-primary" asp-controller="Client" asp-action="DeleteOrder" asp-route-orderId="@item.Id">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>



