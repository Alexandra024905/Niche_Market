@model IEnumerable<ProductViewModel>

@using System.Security.Claims;

@{
    ViewData["Title"] = "RetailerProducts";
}

<h1>My Products</h1>

<p>
    <div type="submit" value="Create" class="btn btn-primary">
        <a asp-controller="Product" asp-action="Create"  style="color:white">Create New</a>
    </div>
</p>

<div class="card-deck">
    @foreach (var item in Model)
    {
        <div class="col-md-4">
            <div class="card mb-4 box-shadow">

                <img class="card-img-top imageThunbnail" src="@Url.Content(item.ImageURL)" asp-append-version="true" style="height: 225px; width: 100%; display: block;">
                <div class="card-body">
                    <h5 class="card-title"> @Html.DisplayFor(model => item.Title)</h5>
                    <h6 asp-for="Price" class="card-title">Price:  @Html.DisplayFor(modelItem => item.Price)</h6>

                    <p class="card-text">Type : @Html.DisplayFor(model => item.Type)</p>
                    <div type="submit" class="btn btn-primary">
                        <a asp-controller="Product" asp-action="Edit" asp-route-id="@item.Id" style="color:white">Edit</a>
                    </div>
                    <div type="submit" class="btn btn-primary">
                        <a asp-controller="Product" asp-action="Details" asp-route-id="@item.Id" style="color:white">Details</a>
                    </div>
                    <div type="submit" class="btn btn-primary">
                        <a asp-controller="Product" asp-action="Delete" asp-route-id="@item.Id" style="color:white">Delete</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>



