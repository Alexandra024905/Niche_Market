@model IEnumerable<OrderViewModel>


@{
    ViewData["Title"] = "RetailerOrders";
}

<h1>Orders</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ClientName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Adress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalPrice)
            </th>
            <th> Details </th>
            <th>Undo</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {

            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ClientName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Adress)
                </td>
                <td>
                    @Html.DisplayNameFor(modelItem => item.TotalPrice)
                </td>
                <td>
                    <a class="btn btn-primary" asp-controller="Client" asp-action="OrderDetails" asp-route-orderId="@item.Id">Details</a>
                </td>
                <th>
                    <a class="btn btn-primary" asp-controller="Retailer" asp-action="UndoOrder" asp-route-orderId="@item.Id">Undo</a>
                </th>

                <td>
                    <a class="btn btn-primary" type="submit" asp-controller="Client" asp-action="DeleteOrder" asp-route-orderId="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>



