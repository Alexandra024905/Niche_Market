

@{
    ViewBag.Title = "Home Page";
}

@{

    IEnumerable<CategoryViewModel> categories = ViewData["Categories"] as IEnumerable<CategoryViewModel>;
    CreateProductBindingModel product = ViewData["Product"] as CreateProductBindingModel;
}
<h1>Create</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form enctype="multipart/form-data" asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="@product.Title" class="control-label"></label>
                <input asp-for="@product.Title" class="form-control" />
                <span asp-validation-for="@product.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@product.Title" class="control-label"></label>
                <input asp-for="@product.Title" class="form-control" />
                <span asp-validation-for="@product.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@product.Price" class="control-label"></label>
                <input asp-for="@product.Price" class="form-control" />
                <span asp-validation-for="@product.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@product.FileUpload" class="control-label"></label>
                <div class="custom-file">
                    <input asp-for="@product.FileUpload" class="form-control custom-file-input" />
                    <label class="custom-file-label">Select image:</label>

                </div>
                <div>
                    @foreach (var category in ViewData["Categories"] as IEnumerable<CategoryViewModel>)
                    {
                        <input type="checkbox" class="btn-check" id="btn-check-outlined" autocomplete="off">
                        <label class="btn btn-outline-primary" for="btn-check-outlined">@category.Name</label><br>

                    }
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
        </form>
    </div>
</div>




<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {


    <script>
        $(document).ready(function () {
            $('.custom-file-input').on('change', function () {
                var fileName = $(this).val().split("\\").pop();
                $(this).next('.custom-file-label').html(fileName);
            })
        });

        $(document).ready(function () {
            $('#ingredients').multiselect();
        });
    </script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

}

