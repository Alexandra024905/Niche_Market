@using Microsoft.AspNetCore.Identity
@using NicheMarket.Data.Models.Users

@using System.Security.Claims;

@inject SignInManager<NicheMarketUser> SignInManager
@inject UserManager<NicheMarketUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {

        @if (User.IsInRole("Retailer"))
        {
            <li class="nav-item">
                <form asp-controller="Retailer" asp-action="RetailerProducts">
                    <button type="submit" class="nav-link btn btn-link text-dark">My Products</button>
                </form>
            </li>

            <li class="nav-item">
                <form asp-controller="Retailer" asp-action="RetailerOrders">
                    <button type="submit" class="nav-link btn btn-link text-dark">Client Orders</button>
                </form>
            </li>
        }
        @if (User.IsInRole("Admin"))
        {
            <li class="nav-item">

                <form asp-controller="Administration" asp-action="Products">
                    <button type="submit" class="nav-link btn btn-link text-dark">All Products</button>
                </form>
            </li>
            <li class="nav-item">
                <form asp-controller="Administration" asp-action="Users">
                    <button type="submit" class="nav-link btn btn-link text-dark">Users</button>
                </form>
            </li>
            <li class="nav-item">

                <form asp-controller="Administration" asp-action="CreateRole">
                    <button type="submit" class="nav-link btn btn-link text-dark">Create Role</button>
                </form>
            </li>
        }
        <li class="nav-item">
            <form asp-controller="Client" asp-action="MyOrders">
                <button type="submit" class="nav-link btn btn-link text-dark">My Orders</button>
            </form>
        </li>
        <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle text-dark" href="#" id="navbarDropdownMenuLink" role="button" data-toggle="dropdown" aria-expanded="false">
                @UserManager.GetUserName(User)
            </a>
            <ul class="dropdown-menu text-dark" aria-labelledby="navbarDropdown">
                <li> <a id="manage" class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Manage Profile</a></li>
                <li>
                    <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                        <button id="logout" type="submit" class="nav-link btn btn-link text-dark"> Logout</button>
                    </form>
                </li>
            </ul>
        </li>
        @*<li class="nav-item">

                <form asp-controller="Cart" asp-action="Index">
                    <button type="submit" class="nav-link btn btn-link text-dark">Shopping Cart</button>
                </form>
            </li>*@

    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
    }
</ul>
